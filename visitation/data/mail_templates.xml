<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

        <record id="mail_template_confirm_visit" model="mail.template">
            <field name="name">Visitation: Confirmation Email</field>
            <field name="model_id" ref="visitation.model_x_scheduled_visit"/>
            <field name="subject">Your Scheduled Visit</field>
            <field name="email_from">${user.company_id.email_formatted | safe}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
  <table style="width: 800px;border-collapse: collapse;">
    <tr style="background-color: #f7f2f2; text-align:center;">
      <td valign="middle" align="left" style="width: 266px;">
        <img src="/logo.png?company=${user.company_id.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}"/>
      </td>
      <td valign="middle" align="center">
        <h1 style="color: #4276a9;">Visit Scheduled</h1>
      </td>
      <td style="width: 266px;" />
    </tr>
  </table>
  <table style="width: 800px;border-collapse: collapse;">
    <tr>
      <td>
        <br/>
        <p style="margin: 0px; padding: 0px; font-size: 12px;">
          Hello ${' and '.join(object.x_visitor_screening_ids.mapped('x_name'))},
          <br/><br/>
            You have scheduled a visit to ${user.company_id.name | safe}, taking place
            <strong>${object.x_visit_availability_slot_id.x_name | safe}</strong>.
            You must bring a printed hard copy of your negative test result that includes your name, date tested and negative result.
            Remember to arrive 15 minutes after your appointment for the screen in procedure.
            If you are unable to make your visit for any reason, please contact us.
          <br/><br/>
            See you soon!
        </p>
        <br/><br/>
      </td>
      <td/>
      <td/>
    </tr>
  </table>
  <table style="width: 800px;border-collapse: collapse;">
    <tr style="background-color: #f7f2f2; text-align:center;color: #4276a9;">
      <td style="width: 266px;">
        <p>${user.company_id.name | safe}</p>
      </td>
      <td >
        <p>${user.company_id.phone | safe}</p>
      </td>
      <td style="width: 266px;text-align:left;">
        <p>
          Call your social worker today if you need to alter or cancel this booking.
        </p>
      </td>
    </tr>
  </table>
</div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    
  </data>
</odoo>
