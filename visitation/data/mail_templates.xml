<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

        <record id="mail_template_confirm_visit" model="mail.template">
            <field name="name">Visitation: Confirmation Email</field>
            <field name="model_id" ref="visitation.model_visit_request"/>
            <field name="subject">Your Scheduled Visit</field>
            <field name="email_from">${(object.assigned_to_user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
  <p style="margin: 0px; padding: 0px; font-size: 12px;">
    Hello World
  </p>
</div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    
  </data>
</odoo>
