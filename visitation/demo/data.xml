<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

    <record id="unit_a" model="x_resident_unit">
      <field name="x_name">A Wing</field>
    </record>

    <record id="unit_b" model="x_resident_unit">
      <field name="x_name">B Wing</field>
    </record>

    <record id="room_1" model="x_resident_room">
      <field name="x_name">1</field>
    </record>

    <record id="room_2" model="x_resident_room">
      <field name="x_name">2</field>
    </record>

    <record id="room_3" model="x_resident_room">
      <field name="x_name">3</field>
    </record>

    <record id="bed_a_1_left" model="x_resident_bed">
      <field name="x_bed_position">left</field>
      <field name="x_unit_id" ref="unit_a" />
      <field name="x_room_id" ref="room_1" />
    </record>

    <record id="bed_a_1_right" model="x_resident_bed">
      <field name="x_bed_position">right</field>
      <field name="x_unit_id" ref="unit_a" />
      <field name="x_room_id" ref="room_1" />
    </record>

    <record id="bed_a_1_left" model="x_resident_bed">
      <field name="x_bed_position">left</field>
      <field name="x_unit_id" ref="unit_a" />
      <field name="x_room_id" ref="room_1" />
    </record>

    <record id="bed_a_1_right" model="x_resident_bed">
      <field name="x_bed_position">right</field>
      <field name="x_unit_id" ref="unit_a" />
      <field name="x_room_id" ref="room_1" />
    </record>

    <record id="heading1" model="x_visitation_content">
      <field name="x_key">heading1</field>
      <field name="x_value">Where does your loved one reside?</field>
    </record>

    <record id="heading2" model="x_visitation_content">
      <field name="x_key">heading2</field>
      <field name="x_value">Who will be visiting?</field>
    </record>

    <record id="heading3" model="x_visitation_content">
      <field name="x_key">heading3</field>
      <field name="x_value">When would you like to visit?</field>
    </record>

    <record id="noAvailability" model="x_visitation_content">
      <field name="x_key">noAvailability</field>
      <field name="x_value">We're sorry, based on your request, we don't have any time slots that can accomodate you.</field>
    </record>

    <record id="visitationNotOpen" model="x_visitation_content">
      <field name="x_key">visitationNotOpen</field>
      <field name="x_value">We're sorry, visitation is not currently open.</field>
    </record>

    <record id="visitConfirmationMessage" model="x_visitation_content">
      <field name="x_key">visitConfirmationMessage</field>
      <field name="x_value">A confirmation email has been sent to your email. You must bring a printed hard copy of your negative test result that includes your name, date tested and negative result. Remember to arrive 15 minutes after your appointment for the screen in procedure. Please call us if you are unable to make your visit.</field>
    </record>


  </data>
</odoo>
