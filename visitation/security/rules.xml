<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

    <record id="rule_public_rpc_user_automation" model="ir.rule">
      <field name="name">Public Rpc User Automated Actions</field>
      <field name="model_id" ref="base_automation.model_base_automation" />
      <field name="groups" eval="[(4, ref('group_public_rpc_user'))]" />
      <field name="domain_force"
        eval="[('id', 'in', [ref('action_auto_set_scheduled_visit')])]" />
    </record>

    <record id="rule_public_rpc_user_fields" model="ir.rule">
      <field name="name">Public Rpc User Needed Fields</field>
      <field name="model_id" ref="base.model_ir_model_fields" />
      <field name="groups" eval="[(4, ref('group_public_rpc_user'))]" />
      <field name="domain_force"
        eval="[('id', 'in', [ref('field_x_visit_request__x_resident_bed_id'), ref('field_x_visit_request__x_screening_ids'),ref('field_x_visit_request__x_requested_availability_id')])]" />
    </record>

  </data>
</odoo>
